    "body": [
      "/* sliding window technique (O(N) approach to find the minimum sum ",
      " of k consecutive elements ) */",
      "",
      "#include <bits/stdc++.h>",
      "using namespace std;",
      "",
      "// Returns maximum sum in a subarray of size k.",
      "int maxSum(int arr[], int n, int k)",
      "{",
      "if (n < k) {  // invalid case",
      "",
      "return -1;",
      "}",
      "",
      "int MaxSum = 0;",
      "for (int i = 0; i < k; i++)",
      "MaxSum += arr[i];",
      "",
      "int win_Sum = MaxSum;",
      "for (int i = k; i < n; i++) {",
      "win_Sum += arr[i] - arr[i - k];",
      "MaxSum = max(MaxSum, win_Sum);",
      "}",
      "",
      "return MaxSum;",
      "}",
      "",
      "",
      ""
